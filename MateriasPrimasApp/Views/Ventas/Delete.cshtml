@model MateriasPrimasApp.Models.Venta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-trash-o"></i>Eliminar Venta
                </div>
            </div>
            <div class="portlet-body">
                <h3 class="text-center">¿Desea eliminar este elemento?</h3>
                <br />
                <div class="row">
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>
                    </div>
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Cliente)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Cliente.Nombre)
                        </dd>
                    </div>
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.UnidadOrganizativa)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.UnidadOrganizativa.Nombre)
                        </dd>
                    </div>
                </div>
                <br />
                <br />
                <div class="text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-info">Atrás</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>