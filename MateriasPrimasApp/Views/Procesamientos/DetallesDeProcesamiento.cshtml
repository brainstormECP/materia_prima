@model MateriasPrimasApp.Models.Procesamiento

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Backend.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-eye"></i>Detalles Procesamiento
                </div>
            </div>
            <div class="portlet-body">
                <div class="row static-info">
                </div>
                <div class="row static-info">
                    <div class="col-md-2 col-md-offset-4 text-left">
                        <dt>
                            Materia Prima
                        </dt>
                    </div>
                    <div class="col-md-4 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Producto.Nombre)
                        </dd>
                    </div>
                </div>
                <div class="row static-info">
                </div>
                <div class="row static-info">
                    <div class="col-md-2 col-md-offset-4 text-left">
                        <dt>
                            Cantidad a procesar
                        </dt>
                    </div>
                    <div class="col-md-4 text-left">
                        <dd>
                            @Model.Cantidad @Model.Producto.Unidad.Unidad
                        </dd>
                    </div>
                </div>
                <div class="row static-info">
                </div>
                <div class="row static-info">
                    <div class="col-md-2 col-md-offset-4 text-left">
                        <dt>
                            Derivados
                        </dt>
                    </div>
                    <div class="col-md-6">
                        <dd>
                            <button id="agregar" class="btn btn-default">Agregar derivados</button>
                        </dd>
                    </div>
                </div>
                <div class="row staic info">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <hr />
                        <div id="result">
                            @await Component.InvokeAsync("DetallesProcesamiento", new { ProcesamientoId = Model.Id })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row staic info">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <a asp-action="Index" class="btn btn-success">Aceptar</a>
                        <a asp-action="Index" class="btn btn-default">Atrás</a>
                    </div>
                </div>
            </div>
           
        </div>       
    </div>    
</div>


<div class="modal fade" id="draggable" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title text-center">Agregar Derivado</h4>
            </div>
            <form asp-controller="Procesamientos" asp-action="AddDetalle" class="form form-horizontal" data-ajax="true" dat-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result" data-ajax-success="onSuccess" data-ajax-failure="onFailed" id="nuevo_detalle_form">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div id="error_msg" class="alert alert-danger" style="display:none">
                                <i class="close icon error_close"></i>
                                <h4>Hay errores en el formulario</h4>
                                <ul class="errors"></ul>
                            </div>
                            <input type="hidden" name="ProcesamientoId" value="@Model.Id" />
                            <div class="form-group">
                                <label for="codigo">Producto</label>
                                <select name="DerivadoId" id="producto" asp-items="ViewBag.Derivados" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>Cantidad</label>
                                <div class="input-group">
                                    <input type="text" name="Cantidad" class="form-control">
                                    <span class="input-group-addon" id="umresult">
                                        <samp class="hint--top um" aria-label="Unidad de Medida">UM</samp>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-md-10 col-md-offset-1">
                        <input type="submit" class="btn btn-success" value="Agregar" />
                    </div>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
