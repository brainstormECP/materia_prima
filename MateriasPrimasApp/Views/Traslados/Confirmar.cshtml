@model MateriasPrimaApp.Models.Traslado

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


    <hr />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-lock"></i>Confirmar Traslado
                    </div>
                </div>
                <div class="portlet-body">
                    <h3 class="text-center">¿Desea confirmar este Traslado?</h3>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Fecha)
                            </dd>
                        </div>
                    </div>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Cliente)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Cliente.Codigo)
                            </dd>
                        </div>
                    </div>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Origen)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Origen.Nombre)
                            </dd>
                        </div>
                    </div>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Destino)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Destino.Nombre)
                            </dd>
                        </div>
                    </div>
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Nombre del Producto</th>
                                <th>Cantidad</th>
                                <th>Unidad de Medida</th>
                            </tr>
                        </thead>
                        <tbody>
                         
                            @foreach (var item in ViewBag.Detalles)
                            {
                                <tr>
                                    <th>@item.Producto.Nombre</th>
                                    <th>@item.Cantidad</th>
                                </tr>
                            }
                        </tbody>

                    </table>
                    <br />
                    <br />
                    <div class="text-center">
                        <form asp-action="Confirmar" method="post">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="form-group">
                                <input type="submit" value="Confirmar" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
       <div class="col-md-2"></div>
    </div>
    <dl class="dl-horizontal">
  </dl>
<div class="text-center">
   <div class="btn-group btn-group-solid">
        <a asp-action="Index" class="btn btn-info">Atrás</a>
</div>
</div>
