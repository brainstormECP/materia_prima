@model MateriasPrimaApp.Models.Transferencia

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-lock"></i>Confirmar Transferencia
                    </div>
                </div>
                <div class="portlet-body">
                    <h3 class="text-center">¿Desea confirmar esta Transferencia?</h3>
                    <br />
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Fecha)
                            </dd>
                        </div>
                    </div>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Origen)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Origen.Nombre)
                            </dd>
                        </div>
                    </div>
                    <div class="row static-info">
                    </div>
                    <div class="row static-info">
                        <div class="col-md-6 text-center">
                            <dt>
                                @Html.DisplayNameFor(model => model.Destino)
                            </dt>
                        </div>
                        <div class="col-md-6 text-left">
                            <dd>
                                @Html.DisplayFor(model => model.Destino.Nombre)
                            </dd>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <table class="table table-responsive">
                                <thead>
                                    <tr>
                                        <th>Nombre del Producto</th>
                                        <th>Cantidad</th>
                                        <th>Unidad de Medida</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @ViewBag.Detalles)
                                    {
                                        <tr>
                                            <td>@item.Producto.Nombre</td>
                                            <td>@item.Cantidad</td>
                                            <td>@item.Producto.Unidad.Unidad</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="text-center">
                        <form asp-action="Confirmar" method="post">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="form-group">
                                <input type="submit" value="Confirmar" class="btn btn-success" />
                                <a asp-action="Index" class="btn btn-default">Atrás</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
