@model MateriasPrimasApp.Models.Transferencia

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-trash-o"></i>Eliminar Transferencia
                </div>
            </div>
            <div class="portlet-body">
                <h3 class="text-center">¿Desea eliminar esta Transferencia?</h3>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>
                    </div>
                    
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Origen)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Origen.Nombre)
                        </dd>
                    </div>
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Destino)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Destino.Nombre)
                        </dd>
                    </div>
                </div>
                <br />
                <br />
                <div class="text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-info">Atrás</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
@section Scripts{
    <script>
         $(document).ready(function () {
            $('#operaciones').addClass("open");
            $('#transferencias').addClass("active");
        });
    </script>
}