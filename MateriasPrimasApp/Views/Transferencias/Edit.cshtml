@model MateriasPrimasApp.Models.Transferencia

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Editar Transferencia
                </div>
            </div>
            <div class="portlet-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Fecha" class="control-label"></label>
                        <input asp-for="Fecha" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrigenId" class="control-label">Origen</label>
                        <input type="password" class="form-control" placeholder="@ViewData["Origen"]" readonly="">
                    </div>
                    <div class="form-group" id="destino">
                        <label asp-for="DestinoId" class="control-label">Destino</label>
                        <select asp-for="DestinoId" class="form-control" asp-items="ViewBag.DestinoId"></select>
                    </div>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-info">Atrás</a>
                        <input type="submit" value="Editar" class="btn yellow" />

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

<div>

</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $('#operaciones').addClass("open");
        $('#transferencias').addClass("active");
    });
    </script>

}