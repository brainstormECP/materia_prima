@model MateriasPrimasApp.Models.UserEditViewModel
@{
    ViewData["Title"] = "CrearUsuario";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <h2>Editar usuario: @ViewBag.Usuario</h2>
        <hr />
        <form asp-action="EditarUsuario">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />           
            
            <div class="form-group">
                <label asp-for="Roles" class="control-label"></label>
                <select asp-for="Roles" asp-items="ViewBag.Roles" class="form-control" multiple></select>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>