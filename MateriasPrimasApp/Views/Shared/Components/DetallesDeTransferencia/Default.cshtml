@model IEnumerable<MateriasPrimaApp.Models.DetalleDeTransferencia>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nombre del Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Producto.Nombre
                </td>
                <td>
                    @item.Cantidad @item.Producto.Unidad.Unidad
                </td>
                <td>
                    @item.PrecioMn
                </td>
                <td>
                    <form asp-action="EliminarDetalle" asp-controller="Transferencias" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result" data-ajax-success="onSuccess" data-ajax-failure="onFailed">
                        <input type="hidden" value="@item.Id" name="id" />
                        <button type="submit" class="btn red hint--top" aria-label="Eliminar Producto"><span class="fa fa-trash"></span></button>
                    </form>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td class="text-left">
                <strong>Total:</strong> @ViewBag.Total
            </td>

            <td></td>
        </tr>
    </tbody>
</table>
