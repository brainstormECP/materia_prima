@model MateriasPrimasApp.ViewModels.ParametroVentasVM
@{
    ViewData["Title"] = "Existencias";
    Layout = "~/Views/Shared/_Backend.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-plus-square"></i>Grafico de Ventas
                </div>
            </div>
            <div class="portlet-body">
                <form asp-action="GraficoCompraVentas">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Ueb" class="control-label"></label>
                        <select asp-for="Ueb" class="form-control" asp-items="@ViewBag.Ueb"></select>
                        <span asp-validation-for="Ueb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="A単o" class="control-label"></label>
                        <input asp-for="A単o" min="2010" class="form-control" />
                        <span asp-validation-for="A単o" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button id="ver-grafico" class="btn btn-primary">Ver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <canvas id="grafica"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/lib/chart.js/Chart.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Reportes').removeClass("active");
            $('#chart').addClass("active");
        });
    </script>
    <script>

        var ventas = {
			type: 'line',
			data: @Html.Raw(Json.Serialize(@ViewBag.Ventas)) ,
			options: {
				responsive: true,
				title: {
					display: true,
					text: 'Comportamiento de las Entradas y Ventas en el a単o'
				},
				tooltips: {
					mode: 'index',
					intersect: false,
				},
				hover: {
					mode: 'nearest',
					intersect: true
				},
				scales: {
					xAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Fecha'
						}
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Importe'
						}
					}]
				}
			}
		};
        window.onload = function() {
			var ctx = document.getElementById('grafica').getContext('2d');
			window.myLine = new Chart(ctx, ventas);
		};
    </script>
}
