@model IEnumerable<MateriasPrimasApp.Models.Transferencia>
@{
    ViewData["Title"] = "ReporteTransferencias";
    Layout = "~/Views/Shared/_Backend.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead>
                <tr>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Origen
                    </th>
                    <th>
                        Destino
                    </th>
                    <th>
                        Producto
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Fecha
                        </td>
                        <td>
                            @item.Origen.Nombre
                        </td>
                        <td>
                            @item.Destino.Nombre
                        </td>
                        <td>
                            <ul>

                                @foreach (var detalle in item.DetallesDeTransferencia)
                                {
                                    <li>
                                        @detalle.ProductoId
                                    </li>
                                }
                            </ul>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#Reportes').removeClass("active");
            $('#Transferencias').addClass("active");
        })

    </script>
}
