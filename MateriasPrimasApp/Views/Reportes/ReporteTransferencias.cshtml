@model IEnumerable<MateriasPrimasApp.Models.Transferencia>
@{
    ViewData["Title"] = "ReporteTransferencias";
    Layout = "~/Views/Shared/_Backend.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <button class="btn btn-primary hidden-print" onclick="window.print();" style="margin-bottom:15px;">Imprimir</button>

        <table class="table table-striped table-bordered table-hover" id="sample_1">
            <thead>
                <tr>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Origen
                    </th>
                    <th>
                        Destino
                    </th>
                    <th>
                        Producto
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @string.Format("{0:dd/MM/yyyy}",item.Fecha)
                        </td>
                        <td>
                            @item.Origen.Nombre
                        </td>
                        <td>
                            @item.Destino.Nombre
                        </td>
                        <td>
                            <table class="table table-responsive table-bordered">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>UM</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in item.DetallesDeTransferencia)
                                    {
                                        <tr>
                                            <td>
                                                @detalle.Producto.Nombre
                                            </td>
                                            <td>
                                                @detalle.Cantidad
                                            </td>
                                            <td>
                                                @detalle.Producto.Unidad.Unidad
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#Reportes').removeClass("active");
            $('#trans').addClass("active");
        })

    </script>
}
