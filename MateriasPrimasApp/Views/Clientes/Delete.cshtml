@model MateriasPrimaApp.Models.Cliente
@{
    Layout = "~/Views/Shared/_Backend.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-trash-o"></i>Eliminar Cliente
                </div>
            </div>
            <div class="portlet-body">
                <h3 class="text-center">Desea eliminar este elemento?</h3>
                <div class="row">
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Codigo)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Codigo)
                        </dd>
                    </div>
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                    </div>
                    <div class="col-md-6 text-right">
                        <dt>
                            @Html.DisplayNameFor(model => model.Organismo)
                        </dt>
                    </div>
                    <div class="col-md-6 text-left">
                        <dd>
                            @Html.DisplayFor(model => model.Organismo)
                        </dd>
                    </div>
                </div>
                <br />
                <br />
                <div class="text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-info">Atrás</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<div>

</div>
