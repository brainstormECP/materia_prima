@model MateriasPrimaApp.Models.UnidadDeMedida

        @{
        ViewData["Title"] = "Delete";
            Layout = "~/Views/Shared/_Backend.cshtml";
        }
        
        
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-trash-o"></i>Eliminar UnidadDeMedida
                </div>
            </div>
            <div class="portlet-body">
                <h3 class="text-center">Desea eliminar este elemento?</h3>
                    <div class="row">
                                <div class="col-md-6 text-right">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Unidad)
                                    </dt>
                                </div>
                                <div class="col-md-6 text-left">
                                    <dd>
                                        @Html.DisplayFor(model => model.Unidad)
                                    </dd>
                                </div>
                                <div class="col-md-6 text-right">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </dt>
                                </div>
                                <div class="col-md-6 text-left">
                                    <dd>
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </dd>
                                </div>
                    </div>
                    <br />
                    <br />
                    <div class="text-center">
                        <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-info">Atrás</a>
                                <input type="submit" value="Eliminar" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>