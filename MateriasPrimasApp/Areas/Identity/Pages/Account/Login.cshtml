@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<style>
    body {
        background-color: #364150 !important;
    }
</style>
<!-- BEGIN GLOBAL MANDATORY STYLES -->
<link href="~/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
<link href="~/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
<!-- END GLOBAL MANDATORY STYLES -->
<!-- BEGIN PAGE LEVEL STYLES -->
<link href="~/pages/css/login.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL SCRIPTS -->
<!-- BEGIN THEME STYLES -->
<link href="~/global/css/components.css" id="style_components" rel="stylesheet" type="text/css" />
<link href="~/global/css/plugins.css" rel="stylesheet" type="text/css" />
<!-- END THEME STYLES -->
<link rel="shortcut icon" href="favicon.ico" />
<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
<div class="login">
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/">
            <img src="~/layout5/img/Logo GER.png" alt="Logo" height="64" width="200" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" method="post">
            <h3 class="form-title">Inicia Sesión</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Escriba sus Credenciales.
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label asp-for="Input.UserName" class="control-label visible-ie8 visible-ie9">Usuario</label>
                <input asp-for="Input.UserName" class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Usuario" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Contraseña</label>
                <input asp-for="Input.Password" class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Contraseña" />
            </div>
            <br />
            <div class="form-actions text-center">
                <button type="submit" class="btn btn-success uppercase">Iniciar</button>
            </div>
        </form>
        <!-- END LOGIN FORM -->
    </div>
    <div class="copyright">

    </div>
</div>
<!-- END LOGIN -->
<script src="~/Identity/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/Identity/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
